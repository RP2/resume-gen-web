---
import "../styles/global.css";
import Footer from "../components/layout/Footer.astro";
const { title, description } = Astro.props;
---

<script>
  // Set theme before paint to avoid FOUC, for all pages
  (function () {
    try {
      const theme = localStorage.getItem("theme");
      const prefersDark = window.matchMedia(
        "(prefers-color-scheme: dark)",
      ).matches;
      if (theme === "dark" || (!theme && prefersDark)) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    } catch {}
  })();
</script>

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <!-- Open Graph Meta Tags for Social Sharing -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://arg.rileyperalta.com/" />
    <meta property="og:site_name" content={title} />
    <meta
      property="og:image"
      content="https://arg.rileyperalta.com/preview.webp"
    />
    <meta property="og:image:type" content="image/webp" />
    <meta property="og:image:alt" content="AI Resume Builder preview" />
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://arg.rileyperalta.com/preview.webp"
    />
    <meta name="twitter:image:alt" content="AI Resume Builder preview" />
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>
